generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model metric {
  host      String
  name      String
  value     String?
  type      MetricType
  timestamp DateTime    @default(now()) @db.Timestamptz(3)
  state     MetricState @default(ok)
  id        Int         @default(autoincrement())

  @@id([host, name])
}

enum MetricType {
  ping
  disk
}

enum MetricState {
  ok
  alert
}
